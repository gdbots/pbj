          "additionalProperties": {
            "customType": "string",
            "rule": "single"
          }
        },
        "created_at": {
          "type": "number",
          "required": true,
          "additionalProperties": {
            "customType": "microtime",
            "rule": "single"
          }
        },
        "updated_at": {
          "type": "number",
          "additionalProperties": {
            "customType": "microtime",
            "rule": "single"
          }
        }
      },
      "required": [
        "_id",
        "created_at"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": {
    "mixin": [
      {
