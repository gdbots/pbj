{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://yourdomain.com/schemas/acme/acme/blog/entity/comment/1-0-0.json",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "required": true,
      "additionalProperties": {
        "customType": "identifier",
        "rule": "single"
      }
    },
    "comment": {
      "type": "string",
      "additionalProperties": {
        "customType": "text",
        "rule": "single"
      }
    },
    "published_at": {
      "type": "number",
      "additionalProperties": {
        "customType": "microtime",
        "rule": "single"
      }
