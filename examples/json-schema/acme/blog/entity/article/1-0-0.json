{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://yourdomain.com/schemas/acme/acme/blog/entity/article/1-0-0.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "additionalProperties": {
        "customType": "string",
        "rule": "single"
      }
    },
    "excerpt": {
      "type": "string",
      "additionalProperties": {
        "customType": "text",
        "rule": "single"
      }
    },
    "excerpt_html": {
      "type": "string",
      "additionalProperties": {
        "customType": "text",
        "rule": "single"
      }
    },
    "thumbnails": {
      "type": "string",
      "additionalProperties": {
        "customType": "string",
        "rule": "map",
        "format": "url"
      }
    },
    "publish_status": {
      "type": "string",
      "enum": [
        "unknown",
        "published",
        "draft",
        "pending",
        "expired",
        "deleted"
      ],
      "additionalProperties": {
        "customType": "string-enum",
        "rule": "single",
        "withDefault": "draft"
      }
    }
  },
  "definitions": {
    "entity": {
      "id": "http://yourdomain.com/schemas/gdbots/gdbots/pbj/mixin/entity/1-0-0.json",
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "required": true,
          "additionalProperties": {
            "customType": "identifier",
            "rule": "single",
            "overridable": true
          }
        },
        "etag": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_\\-]+$",
          "additionalProperties": {
            "customType": "string",
            "rule": "single"
          }
        },
        "created_at": {
          "type": "number",
          "additionalProperties": {
            "customType": "microtime",
            "rule": "single"
          }
        },
        "updated_at": {
          "type": "number",
          "additionalProperties": {
            "customType": "microtime",
            "rule": "single"
          }
        }
      },
      "required": [
        "_id"
      ],
      "additionalProperties": false
    },
    "hascomments": {
      "id": "http://yourdomain.com/schemas/acme/acme/blog/mixin/has-comments/1-0-0.json",
      "type": "object",
      "properties": {},
      "additionalProperties": false
    }
  },
  "additionalProperties": {
    "mixin": [
      {
        "$ref": "#/definitions/entity"
      },
      {
        "$ref": "#/definitions/hascomments"
      }
    ]
  }
}