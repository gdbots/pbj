<?xml version="1.0" encoding="UTF-8" ?>

<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:core:mixin:entity:1-0-0" mixin="true">
    <fields>
      <field name="_id" type="identifier" required="true" overridable="true">
        <php-options>
          <classname>Gdbots\Pbj\WellKnown\UuidIdentifier</classname>
          <default>
            <![CDATA[
              function() {
                return UuidIdentifier::generate();
              }
            ]]>
          </default>
        </php-options>

        <js-options>
          <instance>
            <namespace>gdbots/pbj/well-known/uuid-identifier</namespace>
            <classname>UuidIdentifier</classname>
          </instance>
          <default>
            <![CDATA[
              function() {
                return UuidIdentifier.generate();
              }
            ]]>
          </default>
        </js-options>
      </field>

      <field name="etag" type="string" pattern="^[A-Za-z0-9_\-]+$" max="100" />
      <field name="created_at" type="microtime" required="true" />
      <field name="updated_at" type="microtime" use-type-default="false" />

      <field name="test_message" type="message">
        <any-of>
          <curie>acme:core::test-message</curie>
        </any-of>
      </field>
    </fields>

    <php-options>
      <namespace>Acme\Schemas\Core\Entity</namespace>
      <insertion-points>
        <imports>
            <![CDATA[
use Gdbots\Pbj\MessageRef;
            ]]>
        </imports>
        <methods>
            <![CDATA[
/**
 * @param string $tag
 * @return MessageRef
 */
public function generateMessageRef($tag = null)
{
    return new MessageRef(static::schema()->getCurie(), $this->get('_id'), $tag);
}
            ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <namespace>acme/schemas/core/entity</namespace>
      <insertion-points>
        <imports>
          <![CDATA[
import MessageRef from 'gdbots/pbj/message-ref';
            ]]>
        </imports>
        <methods>
          <![CDATA[
/**
 * @param string tag
 * @return MessageRef
 */
generateMessageRef(tag = null) {
  return new MessageRef(this.constructor.schema().getCurie(), this.get('id'), tag);
}
            ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
