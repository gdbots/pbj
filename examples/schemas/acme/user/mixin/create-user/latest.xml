<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:user:mixin:create-user:1-0-0" mixin="true" extends="gdbots:iam:mixin:create-user:v1">
    <fields>
      <field name="node" type="message" required="true">
        <any-of>
          <curie>gdbots:iam:mixin:user</curie>
        </any-of>
      </field>
    </fields>

    <php-options>
      <namespace>Acme\Schemas\User\Mixin\CreateUser</namespace>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return ['node' => (string)$this->get('node')];
}
            ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <namespace>acme/schemas/core</namespace>
      <insertion-points>
        <imports>
          <![CDATA[
import MessageRef from 'gdbots/pbj/message-ref';
            ]]>
        </imports>
        <methods>
          <![CDATA[
/**
 * @param string tag
 * @return MessageRef
 */
generateMessageRef(tag = null) {
  return new MessageRef(this.constructor.schema().getCurie(), this.generateEtag(), tag);
}

/**
 * @return object
 */
getUriTemplateVars() {
  return {};
}
            ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
