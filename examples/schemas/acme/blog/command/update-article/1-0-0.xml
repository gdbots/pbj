<?xml version="1.0" encoding="UTF-8" ?>

<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:blog:command:update-article:1-0-0">
    <fields>
      <field name="entity" type="message" required="true">
        <any-of>
          <curie>acme:core:mixin:entity</curie>
        </any-of>
      </field>
      <field name="user_id" type="identifier"/>
    </fields>

    <mixins>
      <curie-major>gdbots:pbjx:mixin:command:v1</curie-major>
      <curie-major>acme:core:mixin:update-entity:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Acme\Schemas\Blog\Command</namespace>
      <insertion-points>
        <imports>
          <![CDATA[
use Gdbots\Pbj\MessageRef;
            ]]>
        </imports>
        <methods>
          <![CDATA[
/**
 * @param string $tag
 * @return MessageRef
 */
public function generateMessageRef($tag = null)
{
    return new MessageRef(static::schema()->getCurie(), $this->generateEtag(), $tag);
}

/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [];
}
            ]]>
        </methods>
      </insertion-points>
    </php-options>
  </schema>
</pbj-schema>
