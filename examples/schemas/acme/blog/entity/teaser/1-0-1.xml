<schema-mapping xmlns="gdbots:pbjc:schema-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <entity id="pbj:acme:blog:entity:teaser:1-0-1" mixin="true">
    <fields>
      <field name="_id" type="identifier" required="true">
        <php_options>
          <class_name>Wb\Teasers\TeaserId</class_name>
          <default>
            <![CDATA[
              function() {
                return TeaserId::generate();
              }
            ]]>
          </default>
        </php_options>
      </field>

      <field name="publish_status" type="string-enum">
        <default>draft</default>
        <enum provider="acme:blog:entity:teaser:v1" name="publish-status" />
      </field>

      <field name="published_at" type="microtime" />
      <field name="expires_at" type="timestamp" use_type_default="false" />
      <field name="target_curie" type="string" pattern="/^[a-z0-9-]+:[a-z0-9-]+$/" />
      <field name="target_node_ref" type="string" pattern="/^[a-z0-9-]+:[a-z0-9\/-]+$/" />
      <field name="target_published_at" type="timestamp" />
      <field name="private" type="boolean" />

      <field name="content_type" type="string-enum">
        <default>unknown</default>
        <enum provider="acme:blog:entity:teaser:v1" name="content-type" />
      </field>

      <field name="title" type="string" />
      <field name="short_title" type="string" />
      <field name="tiny_title" type="string" />
      <field name="excerpt" type="text" />
      <field name="excerpt_html" type="text" />
      <field name="icon_label" type="string" />
      <field name="read_more_label" type="string" />
      <field name="og_title" type="string" />
      <field name="og_description" type="text" />
      <field name="seo_title" type="string" />
      <field name="seo_keywords" type="string" rule="a-set" />
      <field name="target_title" type="string" />
      <field name="channel" type="string" format="slug" />
      <field name="channel_title" type="string" />
      <field name="hashtags" type="string" format="hashtag" rule="a-set" />
      <field name="internal_hashtags" type="string" format="hashtag" rule="a-set" />
      <field name="lists" type="string" format="slug" rule="a-set" />
      <field name="galleries" type="string" format="slug" rule="a-set" />
      <field name="thumbnails" type="string" format="url" rule="a-map" />
      <field name="sponsor" type="string" format="url" />
      <field name="img_credit" type="string" />
      <field name="img_caption" type="text" />
      <field name="geo_location" type="geo-point" />
      <field name="search_text" type="text" />
      <field name="sync_with_target" type="boolean" />
      <field name="target" type="message">
        <php_options>
          <class_name>Wb\Teasers\Entity\Teaserable</class_name>
        </php_options>
      </field>
    </fields>

    <enums>
      <enum name="publish-status">
        <option key="PUBLISHED" value="published" />
        <option key="DRAFT" value="draft" />
        <option key="PENDING" value="pending" />
        <option key="EXPIRED" value="expired" />
        <option key="DELETED" value="deleted" />
      </enum>

      <enum name="content-type">
        <option key="UNKNOWN" value="unknown" />
        <option key="ARTICLE" value="article" />
        <option key="AUDIO" value="audio" />
        <option key="COLLECTION" value="collection" />
        <option key="LINK" value="link" />
        <option key="PHOTO" value="photo" />
        <option key="POLL" value="poll" />
        <option key="PROFILE" value="profile" />
        <option key="QUOTE" value="quote" />
        <option key="SOLICIT" value="solicit" />
        <option key="TEXT" value="text" />
        <option key="VIDEO" value="video" />
      </enum>

      <php_options>
        <namespace>Acme\Schemas\Blog\Enum</namespace>
      </php_options>
    </enums>

    <php_options>
      <namespace>Acme\Schemas\Blog\Entity</namespace>
    </php_options>
  </entity>
</schema-mapping>
