<?xml version="1.0" encoding="UTF-8" ?>

<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:acme:blog:entity:article:1-0-1">
    <fields>
      <field name="title" type="string">
        <description>
          <![CDATA[
            The field holds the article title.
          ]]>
        </description>
        <default>N/A</default>
      </field>
      <field name="excerpt" type="text" />
      <field name="excerpt_html" type="text" />

      <field name="thumbnails" type="string" format="url" rule="map">
        <json-schema-options>
          <faker>internet.url</faker>
        </json-schema-options>
      </field>

      <field name="private" type="boolean" />
      <field name="geo_point" type="geo-point" />

      <field name="publish_status" type="string-enum">
        <default>draft</default>
        <enum id="acme:blog:publish-status" />
      </field>

      <field name="content_type" type="string-enum">
        <default>unknown</default>
        <enum id="acme:blog:content-type" />
      </field>

      <field name="expires_at" type="timestamp" />

      <field name="comments" type="message" rule="list">
        <any-of>
          <curie>acme:blog:entity:comment</curie>
        </any-of>
      </field>
    </fields>

    <mixins>
      <curie-major>acme:core:mixin:entity:v1</curie-major>
      <curie-major>acme:core:mixin:article:v1</curie-major>
      <curie-major>acme:blog:mixin:has-comments:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Acme\Schemas\Blog\Entity</namespace>
      <insertion-points>
        <imports>
          <![CDATA[
use Gdbots\Pbj\MessageRef;
            ]]>
        </imports>
        <methods>
          <![CDATA[
/**
 * @param string $tag
 * @return MessageRef
 */
public function generateMessageRef($tag = null)
{
    return new MessageRef(static::schema()->getCurie(), $this->generateEtag(), $tag);
}
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [];
}
            ]]>
        </methods>
      </insertion-points>
    </php-options>
  </schema>
</pbj-schema>
