{
  "schema_id": "{{ schema.id }}",
  "fields": {
    {% for field in schema.fields %}
      "{{ field.name }}": {
        "type": "{{ field.type.typeName }}",
        {% if field.required %}
          "required": true
        {% endif %}
      }{% if not loop.last %},{% endif %}
    {% endfor %}
  }
}
