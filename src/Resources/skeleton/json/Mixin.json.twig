{
  "schema_id": "{{ schema.id }}",
  "fields": {
    {% import 'json/fields.json.twig' as fields %}
    {% for field in schema.fields %}
      {% if attribute(fields, class(field.type)) is defined %}
        {{ attribute(fields, class(field.type), [field]) }}
      {% else %}
        {{ fields.BaseType(field) }}
      {% endif %}
      {% if not loop.last %},{% endif %}
    {% endfor %}
  }
}
