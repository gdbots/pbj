{% macro FieldCreate(field) %}
          Field::create('{{ field.name }}', T\{{ class(field.type) }}::create())
{% endmacro %}

{% macro FieldAttributes(field) %}
          {% if field.required %}
              ->required(),
          {% endif %}
{% endmacro %}

{% macro FieldEnd() %}
              ->build()
{% endmacro %}

{% macro IdentifierType(field) %}
    {{ _self.FieldCreate(field) }}
    {{ _self.FieldAttributes(field) }}
    {{ _self.FieldEnd() }}
{% endmacro %}

